    <%= f.label :dest %><br>
    <%= f.text_field :dest %>
  </div>
  <div class="field">
    <%= f.label :rail %><br>
    <%= f.text_field :rail %>
  </div>

  <div class="col-md-6">
    <h3> Cutoff and Arrive </h3>
      <div id="cutoff">
