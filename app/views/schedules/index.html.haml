%h1{:class => "text-center"} Rail Schedules



%table{:class => "table table-striped table-hover"}
  %thead
    %tr
      %th LH Region
      %th Orig
      %th Dest
      %th Rail
      %th Show
      %th Edit
      %th Delete

    %tbody
      - @schedules.each do |schedule|
        %tr
          %td= schedule.lh_region
          %td= schedule.orig
          %td= schedule.dest
          %td= schedule.rail
          %td= link_to 'View Legs / Equipment', schedule, class: "btn btn-default"
          %td= link_to 'Edit', edit_schedule_path(schedule), class: "btn btn-default"
          %td= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"

= link_to 'Search Schedules', search_path, class: "btn btn-lg btn-success search"
= link_to 'New Schedule', new_schedule_path, class: "btn btn-lg btn-primary new"



